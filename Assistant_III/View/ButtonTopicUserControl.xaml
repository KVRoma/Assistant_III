<UserControl x:Class="Assistant_III.View.ButtonTopicUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Assistant_III.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Style="{StaticResource BorderRadius}">
        <Grid HorizontalAlignment="Stretch"  VerticalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Content="*" Foreground="Green" FontSize="20" Command="{Binding AddTopicCommand}" Height="30" Width="30"></Button>
            <Button Grid.Column="1" Content="*" Foreground="Yellow" FontSize="20" Command="{Binding EditTopicCommand}" Height="30" Width="30"></Button>
            <Button Grid.Column="2" Content="*" Foreground="Red" FontSize="20" Command="{Binding DelTopicCommand}" Height="30" Width="30"></Button>
        </Grid>
    </Border>
    
</UserControl>
